;юддддддддддддддддддддддддддддддддддддддддддддддддддды
update:
    tm_fire
    mo_read mouse_data
    st_top
    call    [st_callback]
    cmp     al, 1
    je      >p1
p0: key
    cmp     al, 0
    je      >p1
    cmp     al, K_ESC
    je      >p2
p1: ret
p2: jmp     exit_cb

